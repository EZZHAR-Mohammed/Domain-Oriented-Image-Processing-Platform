QMainWindow, QDialog { background: #212529; color: #e9ecef; }
QWidget       { background: #212529; color: #e9ecef; }
QPushButton   { background: #343a40; border: 1px solid #495057; padding: 6px 12px; border-radius: 4px; color: #e9ecef; }
QPushButton:hover { background: #495057; }
QSlider::groove:horizontal { border: 1px solid #495057; height: 8px; background: #343a40; }
QSlider::handle:horizontal { background: #0d6efd; border: 1px solid #0d6efd; width: 18px; margin: -5px 0; border-radius: 3px; }